<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/backround"
    tools:context="com.example.hp.gestures.Sign_In_Activity">



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/name_sign_up"
        android:backgroundTint="@color/white"
        android:hint="Full Name"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:shadowColor="@color/text_shadow"
        android:shadowDx="-2"
        android:shadowDy="-2"
        android:shadowRadius="20"
        android:layout_marginTop="133dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email_sign_in"
        android:backgroundTint="@color/white"
        android:hint="Email"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:shadowColor="@color/text_shadow"
        android:shadowDx="-2"
        android:shadowDy="-2"
        android:shadowRadius="20"

        android:layout_below="@+id/name_sign_up"
        android:layout_alignLeft="@+id/name_sign_up"
        android:layout_alignStart="@+id/name_sign_up" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password_sign_in"
        android:backgroundTint="@color/white"
        android:hint="Password"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_below="@+id/email_sign_in"
        android:layout_alignLeft="@+id/email_sign_in"
        android:layout_alignStart="@+id/email_sign_in" />

    <ImageButton
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageButton"
        android:src="@drawable/message"
        android:layout_above="@+id/password_sign_in"
        android:layout_toLeftOf="@+id/email_sign_in"
        android:layout_toStartOf="@+id/email_sign_in"
        android:layout_marginBottom="10dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Sign Up"
        android:textColor="@color/white"
        android:id="@+id/button"
        android:layout_marginTop="23dp"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@+id/password_sign_in"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
